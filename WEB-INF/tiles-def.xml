<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN" "http://jakarta.apache.org/struts/dtds/tiles-config_1_3.dtd">

<tiles-definitions>

	<!-- ========== base ========== -->
	<definition name=".article.base" path="/WEB-INF/layouts/defaultLayout.vm">
		<put name="title" value="${title}" />
		<put name="globalHeader" value="/WEB-INF/layouts/headers/global.vm" />
		<put name="localHeader" value="${localHeader}" />
		<put name="selectedGlobalTab" value="${selectedGlobalTab}" />
		<put name="content" value="${content}" />
		<put name="footer" value="/WEB-INF/layouts/footer.vm" />
	</definition>

	<definition name=".admin.base" extends=".article.base">
		<put name="localHeader" value="/WEB-INF/layouts/headers/adminLocal.vm" />
		<put name="selectedGlobalTab" value="row1tab1" />
		<put name="content" value="${content}" />
	</definition>

	<definition name=".user.base" extends=".article.base">
		<put name="localHeader" value="/WEB-INF/layouts/headers/userLocal.vm" />
		<put name="selectedGlobalTab" value="row1tab2" />
		<put name="content" value="${content}" />
	</definition>

	<!-- ========== users and roles ========== -->
	<definition name=".user.userList" extends=".user.base">
		<put name="title" value="Users" />
		<put name="content" value="/WEB-INF/user/pages/userList.vm" />
	</definition>

	<definition name=".user.editUser" extends=".user.base">
		<put name="title" value="Edit User" />
		<put name="content" value="/WEB-INF/user/pages/userCRU.vm" />
